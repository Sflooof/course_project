<Window x:Class="Games.Windows.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Games.Windows"
        mc:Ignorable="d"
        Title="Game" Height="550" Width="1000" Icon="/Windows/icons8-rubik_s-cube-66.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF9F40"></Grid>
        <Grid Grid.Row="2" Background="#FF9F40"></Grid>
        <TextBlock Text="НаСтол" FontSize="30" Margin="80 5 5 5" TextAlignment="Left"></TextBlock>
        <Image Source="/Resources/icon.png" HorizontalAlignment="Left"></Image>
        <Frame Name="FrameSecond" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
        <Button Content="Назад" Name="Bt_back" HorizontalAlignment="Right"  Grid.Row="2" Width="171" Click="Bt_back_Click"/>
    </Grid>
</Window>
